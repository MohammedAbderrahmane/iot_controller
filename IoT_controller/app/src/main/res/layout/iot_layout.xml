<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_object_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_sans"
                android:text="Object Name"
                android:textColor="@color/color3"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_object_ip_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:text="10.10.10.10:5683"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_object_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="Description"
                android:textSize="10sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_object_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@drawable/bg_button_"
            android:text="Access Object"
            android:textColor="@color/color3"
            android:textSize="10sp"
            android:visibility="gone"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn_object_get_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button_"
            android:text="Get Token"
            android:textColor="@color/color3"
            android:textSize="10sp"
            app:backgroundTint="@null" />

        <View
            android:id="@+id/status_object_online"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/online_status" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_object_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="Error"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>