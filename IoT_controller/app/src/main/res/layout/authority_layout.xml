<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="4dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_b"
            android:orientation="vertical"
            android:padding="8dp">



            <TextView
                android:id="@+id/authority_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_sans"
                android:text="Authority name : Maintenace"

                android:textColor="@color/color3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/authority_text_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="url : http://fognode/"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/authority_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text=""
                android:textColor="@color/error"
                tools:visibility="visible" />


            <Button
                android:id="@+id/authority_btn_logn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_"
                android:text="Retreive keys"
                android:textColor="@color/color3"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/authority_text_is_authenticated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_sans"
                android:text="Arleady have keys"
                android:textAlignment="center"
                android:textColor="@color/success"
                android:textFontWeight="1000"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/authority_img_btn_clear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"

        android:background="@drawable/bg_img_button"
        android:scaleType="fitXY"
        android:src="@drawable/clear" />
</FrameLayout>