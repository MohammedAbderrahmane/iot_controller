
CREATE USER 'username'@'localhost' IDENTIFIED BY 'password';

CREATE DATABASE fog_node_db;

GRANT ALL PRIVILEGES ON fog_node_db.* TO 'username'@'localhost';

FLUSH PRIVILEGES;

USE fog_node_db;

CREATE TABLE IF NOT EXISTS IoTObject (
    id TEXT PRIMARY KEY,
    name TEXT NOT NULL,
    description BOOLEAN NOT NULL DEFAULT TRUE,
    accessPolicy TEXT NOT NULL,
    date_creation TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    date_enters TIMESTAMP NULL
);

CREATE TABLE IF NOT EXISTS Authority (
    id TEXT PRIMARY KEY,
    name TEXT NOT NULL,
    url TEXT NOT NULL
);